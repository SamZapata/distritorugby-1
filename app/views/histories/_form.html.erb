<div class="form">
  <%= form_for(history) do |f| %>
    <% if history.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(history.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% history.errors.full_messages.each do |message| %>
          <li><%= message %></li>
