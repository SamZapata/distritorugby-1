<!-- Show histories -->
<div class="container">
  <div class="row col-xs-offset-1 col-xs-10">
    
    <h4 class="heading page-header"> <%= @history.title %> </h4>
    <p class="header-p text-justify"> <%= simple_format(@history.content) %> </p>

    <div class="row thumbnail col-xs-offset-1 col-xs-8">
      <img class="img-responsive">
        <%= image_tag @history.image.url%>
      </img>
    </div>
  </div>

</div>

<div class="container text-center">
  <%= link_to 'Editar', edit_history_path(@history) %> |
  <%= link_to 'Volver', histories_path %>
  </br>
</div>