<!-- Show News -->

<div class="container">
	<div class="row col-xs-offset-1 col-xs-10">
		<p align="right"></br>
			<%= @news.created_at %>
		</p>
		<h4 class="heading page-header">
			<%= @news.title %>
		</h4>
		<p>
			<%= simple_format(@news.description)	%>
		</p>
	</div>
</div>

<div class="container text-center">
 	<%= link_to 'Editar', edit_news_path(@news) %> |
	<%= link_to 'Volver', news_index_path %>
  	</br>
</div>
